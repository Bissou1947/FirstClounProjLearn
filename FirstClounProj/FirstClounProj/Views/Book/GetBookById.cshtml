@model BookModel
@{
    ViewData["Title"] = "Book-"+Model.bookTitle;
}
@section BreadCrumb{
    <nav aria-label="BreadCrumb">
        <ol class="breadcrumb mb-0 bg-white">
            <li class="breadcrumb-item"><a href="/Book/GetALlBooks">Books</a></li>
            <li class="breadcrumb-item"><a href="/Book/GetALlBooks">All Books</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.bookTitle-Book Details</li>
        </ol>
    </nav>
}
<div class="container mb-4">
    <h1 class="h1 display-4">Book Detailes</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img asp-append-version="true" src="/images/boots-trap-logo.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img asp-append-version="true" src="/images/boots-trap-logo.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img asp-append-version="true" src="/images/boots-trap-logo.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.bookTitle</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="text-monospace">By:</span>
                    <span class="text-monospace">@Model.bookAuthor</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Model.bookDescription
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">Read Book</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        <li class="list-group-item"><span class="font-weight-bold">Category - </span>@Model.bookCategory</li>
                        <li class="list-group-item"><span class="font-weight-bold">Total Pages - </span>@Model.bookTotalPages</li>
                        <li class="list-group-item"><span class="font-weight-bold">Language - </span>@Model.bookLanguage</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


</div>

